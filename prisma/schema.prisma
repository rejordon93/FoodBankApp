generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql, sqlite, etc.
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model Profile {
  id  Int @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  phoneNumber String
  dataOfBirth String
  hasDonated String
  address String
}